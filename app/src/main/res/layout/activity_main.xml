<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewPassengerLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="PASSENGER"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                app:layout_constraintLeft_toLeftOf="@id/textViewPassengerLabel"
                app:layout_constraintTop_toBottomOf="@+id/textViewPassengerLabel"
                tools:text="MR. JAMES BOND"/>

            <ImageView
                android:id="@+id/buttonFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="8dp"
                android:background="@mipmap/destination"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"/>

            <ImageView
                android:id="@+id/buttonTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="28dp"
                android:layout_marginTop="8dp"
                android:background="@mipmap/destination"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"/>

            <ImageView
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"

                app:layout_constraintBottom_toTopOf="@+id/buttonTo"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toRightOf="@+id/buttonFrom"
                app:layout_constraintRight_toLeftOf="@+id/buttonTo"
                app:layout_constraintTop_toBottomOf="@+id/buttonTo"/>

            <TextView
                android:id="@+id/from_Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/buttonFrom"
                app:layout_constraintLeft_toLeftOf="@+id/buttonFrom"
                app:layout_constraintRight_toRightOf="@+id/buttonFrom"
                app:layout_constraintTop_toTopOf="@+id/buttonFrom"
                tools:text="TRK"/>

            <TextView
                android:id="@+id/to_Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/buttonTo"
                app:layout_constraintLeft_toLeftOf="@+id/buttonTo"
                app:layout_constraintRight_toRightOf="@+id/buttonTo"
                app:layout_constraintTop_toTopOf="@+id/buttonTo"
                tools:text="SVO"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="BOARDING TIME"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/buttonFrom"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                app:layout_constraintStart_toStartOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                tools:text="02:10 PM"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="DEPARTURE"
                app:layout_constraintStart_toStartOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/textView6"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#11a41d"
                android:textSize="26sp"
                app:layout_constraintStart_toStartOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                tools:text="02:40 PM"/>

            <TextView
                android:id="@+id/boardingIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:text="BOARDING IN"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView5"/>

            <TextView
                android:id="@+id/boardingTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#ac0606"
                app:layout_constraintStart_toStartOf="@+id/boardingIn"
                app:layout_constraintTop_toBottomOf="@+id/boardingIn"
                tools:text="00:15"/>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ARRIVAL"
                app:layout_constraintStart_toStartOf="@+id/boardingTimeLabel"
                app:layout_constraintTop_toTopOf="@+id/textView7"/>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#11a41d"
                android:textSize="26sp"
                app:layout_constraintStart_toStartOf="@+id/textView11"
                app:layout_constraintTop_toBottomOf="@+id/textView11"
                tools:text="12:40 AM"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/divider"
                app:layout_constraintEnd_toEndOf="@+id/divider"
                app:layout_constraintStart_toStartOf="@+id/divider"
                app:srcCompat="@mipmap/plane"/>


            <ImageView
                android:id="@+id/high"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:background="#868dba"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8"/>


            <ImageView
                android:id="@+id/low"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/high"/>

            <TextView
                android:id="@+id/gateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:text="GATE"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/high"
                app:layout_constraintEnd_toEndOf="@+id/high"
                app:layout_constraintStart_toStartOf="@+id/high"
                app:layout_constraintTop_toTopOf="@+id/high"/>

            <TextView
                android:id="@+id/terminalLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="TERMINAL"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/gateLabel"
                app:layout_constraintEnd_toStartOf="@+id/gateLabel"
                app:layout_constraintStart_toStartOf="@+id/high"
                app:layout_constraintTop_toTopOf="@+id/gateLabel"/>

            <TextView
                android:id="@+id/seatLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:text="SEAT"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/gateLabel"
                app:layout_constraintEnd_toEndOf="@+id/high"
                app:layout_constraintStart_toEndOf="@+id/gateLabel"
                app:layout_constraintTop_toTopOf="@+id/gateLabel"/>

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="40sp"
                app:layout_constraintEnd_toEndOf="@+id/terminalLabel"
                app:layout_constraintStart_toStartOf="@+id/terminalLabel"
                app:layout_constraintTop_toBottomOf="@+id/high"
                tools:text="2"/>

            <TextView
                android:id="@+id/gate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/background_light"
                android:textSize="40sp"
                app:layout_constraintEnd_toEndOf="@+id/gateLabel"

                app:layout_constraintStart_toStartOf="@+id/gateLabel"
                app:layout_constraintTop_toBottomOf="@+id/high"
                tools:text="58B"/>

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="TextView"
                android:textColor="@android:color/background_light"
                android:textSize="40sp"
                app:layout_constraintEnd_toEndOf="@+id/seatLabel"
                app:layout_constraintStart_toStartOf="@+id/seatLabel"
                app:layout_constraintTop_toTopOf="@+id/gate"
                tools:text="24A"/>

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:textSize="26sp"
                app:layout_constraintEnd_toEndOf="@+id/divider"
                app:layout_constraintStart_toStartOf="@+id/divider"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                tools:text="UDA 2465"/>

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="85dp"
                android:layout_height="83dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/low"
                app:srcCompat="@mipmap/qr_code"/>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</layout>























